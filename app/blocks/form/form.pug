mixin form(action, method)
  +b.FORM(action=action method=method).form&attributes()
    block

mixin input-box()
  +b.input__box&attributes(attributes)
    block
    
mixin input-title()
  +b.LABEL.input__title&attributes(attributes)
    block

mixin input()
  +b.INPUT.input&attributes(attributes)

mixin textarea()
  +b.TEXTAREA.textarea&attributes(attributes)
    block

mixin select()
  +b.SELECT.select&attributes(attributes).js-select
    block

mixin checkbox(name, value, checked)
  +b.LABEL.checkradio&attributes(attributes)
    - var check = checked || '';
    +e.INPUT.input(name=name, value=value, check, type="checkbox")
    +e.SPAN.box
    +e.SPAN.content
      block

mixin radio(name, value, checked)
  +b.LABEL.checkradio&attributes(attributes)
    +e.INPUT.input(name=name, value=value, checked=checked, type="radio")
    +e.SPAN.box
    +e.SPAN.content
      block

mixin input-number()
  .input-numberbox
    span.input-numberbox__button.js-numberbox-minus
    input.input.input-numberbox__input.js-numberbox-input&attributes(attributes)
    span.input-numberbox__button.js-numberbox-plus