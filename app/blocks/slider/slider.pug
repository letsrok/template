mixin slider(pagination, buttons)
  +b.slider&attributes(attributes).swiper-container.js-slider
    .swiper-wrapper
      block
    if pagination
      +e.dots
        +e.dot
    if buttons
      +e.button._prev
      +e.button._next

mixin slide(title)
  .swiper-slide
    +e.slide&attributes(attributes)
      a(href="/")
      if title
        .slider__title !{title}
      block
